#!/bin/sh
echo "/*"
echo " * RapidBATCH 6 Software Development Kit"
echo " * Copyright (C) 2009 by Phorward Software Technologies"
echo " *"
echo " * Authors: Jan Max Meyer"
echo " *          Andreas Harbecke"
echo " *          Klaus Fischer"
echo " *"
echo " * THIS FILE IS AUTOMATICALLY GENERATED."
echo " * MODIFICATION IS NOT RECOMMENDED!"
echo " */"

echo ""
now=`date +%d%m%Y`
echo "#ifndef RB_SDK_H_$now"
echo "#define RB_SDK_H_$now"

mode=$1
if [ "$mode" != "internal" ]
then
	mode="external"
fi

awk -f exp_headers.awk -v mode=$mode rb_global.h rb_vm.h rb_comp.h rb_val.h rb_var.h rb_native.h

awk -f exp_func.awk -v mode=$mode rb_proto.h

echo ""
echo "#endif /* $now */"
echo ""
