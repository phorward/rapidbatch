LFLAGS = -L..\..\Programme\Borland\CBuilder4\Projects;$(BCB)\lib;$(DEBUGLIBPATH) -aa \
  -Tpe -x -Gn -v
# ---------------------------------------------------------------------------
ALLOBJ = c0w32.obj $(PACKAGES) $(OBJFILES)
ALLRES = $(RESFILES)
